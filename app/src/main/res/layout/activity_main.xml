<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dip"
        android:shrinkColumns="2"
        android:stretchColumns="*" >
    </TableLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#FF0000" />

    <RadioGroup
        android:id="@+id/radGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:paddingLeft="50dp"
        android:layout_gravity="center_horizontal" >

        <RadioButton
            android:id="@+id/blockAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             
            android:text="Block All Calls"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/blockUnsaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block Unsaved Contacts"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/blockFromList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block From List"
            android:textStyle="bold" />
         <RadioButton
            android:id="@+id/cancelBlocker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel All Block"
            android:textStyle="bold" />
    </RadioGroup>

    

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#FF0000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Add Number" />

        <Button
            android:id="@+id/btnShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Show List" />

    </RelativeLayout>

</LinearLayout>
  